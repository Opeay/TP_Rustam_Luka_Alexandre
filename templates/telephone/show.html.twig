{% extends 'base.html.twig' %}

{% block title %}Telephone{% endblock %}

{% block body %}
    <h1>Telephone</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ telephone.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ telephone.Numero }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ telephone.Description }}</td>
            </tr>
            <tr>
                <th>DateEnreg</th>
                <td>{{ telephone.DateEnreg ? telephone.DateEnreg|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ telephone.DateFin ? telephone.DateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ telephone.Status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_telephone_index') }}">back to list</a>

    <a href="{{ path('app_telephone_edit', {'id': telephone.id}) }}">edit</a>

    {{ include('telephone/_delete_form.html.twig') }}
{% endblock %}
