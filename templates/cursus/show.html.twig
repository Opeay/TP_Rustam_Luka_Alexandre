{% extends 'base.html.twig' %}

{% block title %}Cursus{% endblock %}

{% block body %}
<div class="container d-flex justify-content-between flex-wrap p-4 h-100">

    <div class="cards w-100 h-80">
        <div class="box h-100">

            <div class="content">
                <h3>{{ cursu.libelle }}</h3>
                <p>{{cursu.descriptionCursus}}</p>
                <span class="text-light">prix : {{cursu.prixCursus}} €</span>
                <div class="d-flex justify-content-between my-4">
                    <a href="{{ path('app_cursus_index') }}" class="btn btn-md btn-primary m-3">Retour</a>
                    {% if is_granted('ROLE_ADMIN')%}
                    <a href="{{ path('app_cursus_edit', {'id': cursu.id}) }}" class="btn btn-md btn-primary m-3">Modifier</a>   
                    {% endif %}
                </div>
                {{ include('cursus/_delete_form.html.twig') }}
            </div>
            
        </div>
        
    </div>
    <div class="d-flex justify-content-center w-100">
        <a href="{{ path('app_cursus_index') }}" class="btn btn-md btn-success m-3 text-center">je m'inscris à cette formation</a>
    </div>
</div>






