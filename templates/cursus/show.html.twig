                    {% endif %}
                </div>
                {{ include('cursus/_delete_form.html.twig') }}
    <div class="d-flex justify-content-center w-100">
        <a href="{{ path('app_cursus_index') }}" class="btn btn-md btn-secondary m-3 text-center">je m'inscris à cette formation</a>
