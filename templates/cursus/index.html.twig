{% extends 'base.html.twig' %}

{% block title %}Cursus index{% endblock %}

{% block body %}
<div class="d-flex justify-content-center flex-column">
    <h1 class="text-light text-center p-5">NOS FORMATIONS</h1>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_cursus_new') }}" class="btn btn-small btn-secondary auto">Creer une formation</a>
    {% endif  %}
    <div class="container d-flex justify-content-between  flex-wrap p-4">
            {% for cursu in cursuses %}
        <div class="cards">
            
            <div class="box boxs">

                <div class="content">
                    <h3>{{ cursu.libelle }}</h3>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Labore, totam velit? Iure nemo labore inventore?</p>
                    <a href="{{ path('app_cursus_show', {'id': cursu.id}) }}" class="btn btn-md btn-light text-dark">Voir plus</a>
                </div>
            
            </div>
        
        </div>
            {% endfor %}
    </div> 
</div>  
{% endblock %}
