                <td class="col-1">{{ email_adresse.DateFin ? email_adresse.DateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td class="col-1">{{ email_adresse.Status ? 'Yes' : 'No' }}</td>
                <td class="col-1">
                    <div class="btn-group">  
                    <div>
                        <a class="btn btn-success btn-sm"  href="{{ path('app_email_adresse_show', {'id': email_adresse.id}) }}">show</a>
                        <a href="{{ path('app_email_adresse_edit', {'id': email_adresse.id}) }}">edit</a>
                    </div>                      
                    </div>
                    </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-primary">aucun @dresse enregistrÃ© actuellement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>   
{% endblock %}
