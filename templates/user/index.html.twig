{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
<div class="center text-light w-90">
    <h1>Liste des utilisateurs</h1>

     <a href="{{ path('app_user_new') }}" class="btn btn-small btn-secondary auto m-4">Creer un utilisateur</a>

    <table class="table text-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de compte</th>
                <th>Roles</th>
                <th>Mot de passe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>********</td>
                <td class ="d-flex justify-content-around">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-small btn-secondary">Afficher</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-small btn-secondary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
