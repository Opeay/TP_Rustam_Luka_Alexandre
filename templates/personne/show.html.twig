{% extends 'base.html.twig' %}

{% block title %}Personne{% endblock %}

{% block body %}
    <h1>Personne</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ personne.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ personne.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ personne.Prenom }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ personne.DateNaissance ? personne.DateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ personne.Sexe ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Identifiant</th>
                <td>{{ personne.Identifiant }}</td>
            </tr>
            <tr>
                <th>NSS</th>
                <td>{{ personne.NSS }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_personne_index') }}">back to list</a>

    <a href="{{ path('app_personne_edit', {'id': personne.id}) }}">edit</a>

    {{ include('personne/_delete_form.html.twig') }}
{% endblock %}
